@using DataAnalysisSystem.DataEntities
@using Microsoft.AspNetCore.Identity
@model DataAnalysisSystem.DTO.UserDTO.UserLoginViewModel
@inject SignInManager<IdentityProviderUser> SignInManager
@{
    ViewData["Title"] = "Log In";
}

<div class="row" style="margin-bottom:0px">

    <div class="col s8 offset-s2" style="margin-top:10%">
        <div class="card card-login">
            <div class="card-content">
                <span class="card-title center-align">Log In</span>

                <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">

                    <div class="input-field">

                        <i class="material-icons prefix">mail_outline</i>
                        <input type="email" asp-for="Email" required="" aria-required="true" class="validate">
                        <label asp-for="Email"></label>

                        <span asp-validation-for="Email" class="helper-text" style="color: #F44336"></span>

                    </div>

                    <div class="input-field">

                        <i class="material-icons prefix">security</i>
                        <input type="password" asp-for="Password" required="" aria-required="true" class="validate">
                        <label asp-for="Password"></label>

                        <span asp-validation-for="Password" class="helper-text" style="color: #F44336"></span>

                    </div>

                    <p>
                        <label>
                            <input type="checkbox" asp-for="RememberMe" class="filled-in" checked />
                            <span>@Html.DisplayNameFor(m => m.RememberMe)</span>
                        </label>
                    </p>

                    <div class="center-align" style="margin-top: 10px">
                        <input class="btn" type="submit" value="Log In">
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

<div class="row">

    <div class="col s8 offset-s2">
        <a asp-action="ForgotPassword" class="waves-effect waves-teal btn-flat right">Forgot password?</a>
    </div>

</div>

@section Notification
{
    <div class="row">
        <div class="col s8 offset-s2">

            <div asp-validation-summary="ModelOnly" class="row justify-content-center alert alert-danger validation-model"></div>

        </div>
    </div>
}

@if (ViewData["Message"] != null)
{
    @section Notification
    {
        <div class="row">
            <div class="col s8 offset-s2">

                <h2 class="alert alert-info" role="alert">@ViewData["Message"]</h2>

            </div>
        </div>
    }
}
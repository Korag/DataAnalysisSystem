@model DataAnalysisSystem.DTO.UserDTO.UserRegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="row" style="margin-bottom:0px">

    <div class="col s8 offset-s2" style="margin-top: 10vh">
        <div class="card">
            <div class="card-content">
                <span class="card-title center-align">Register</span>

                <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" class="col s12">

                    <div class="input-field col s12">

                        <i class="material-icons prefix">mail_outline</i>
                        <input type="email" asp-for="Email" required="" aria-required="true" class="validate">
                        <label asp-for="Email"></label>

                        <span asp-validation-for="Email" class="helper-text" style="color: #F44336"></span>

                    </div>

                    <div class="input-field col s6">

                        <i class="material-icons prefix">contact_page</i>
                        <input type="text" asp-for="FirstName" required="" aria-required="true" class="validate">
                        <label asp-for="FirstName"></label>

                        <span asp-validation-for="FirstName" class="helper-text" style="color: #F44336"></span>

                    </div>

                    <div class="input-field col s6">

                        <i class="material-icons prefix">supervisor_account</i>
                        <input type="text" asp-for="LastName" required="" aria-required="true" class="validate">
                        <label asp-for="LastName"></label>

                        <span asp-validation-for="LastName" class="helper-text" style="color: #F44336"></span>

                    </div>

                    <div class="input-field col s6">

                        <i class="material-icons prefix">lock</i>
                        <input type="password" asp-for="Password" required="" aria-required="true" class="validate">
                        <label asp-for="Password"></label>

                        <span asp-validation-for="Password" class="helper-text" style="color: #F44336"></span>

                    </div>

                    <div class="input-field col s6">

                        <i class="material-icons prefix">lock_open</i>
                        <input type="password" asp-for="ConfirmPassword" required="" aria-required="true" class="validate">
                        <label asp-for="ConfirmPassword"></label>

                        <span asp-validation-for="ConfirmPassword" class="helper-text" style="color: #F44336"></span>

                    </div>

                    <div class="center-align" style="margin-top: 10px">
                        <input class="btn" type="submit" value="Register">
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@section Notification
{
    <div class="row">
        <div class="col s8 offset-s2">

            <div asp-validation-summary="ModelOnly" class="row justify-content-center alert alert-danger validation-model"></div>

        </div>
    </div>
}
@model DataAnalysisSystem.DTO.UserDTO.ForgotPasswordViewModel

@{
    ViewData["Title"] = "ForgotPassword";
}

<div class="row" style="margin-bottom:0px">

    <div class="col s12 m10 l8 offset-m1 offset-l2" style="margin-top: 10vh">
        <div class="card">
            <div class="card-content">
                <span class="card-title center-align">Reset forgotten password</span>

                <form asp-action="ForgotPassword" asp-controller="User" method="post">

                    <div class="input-field">

                        <i class="material-icons prefix">mail_outline</i>
                        <input type="email" asp-for="Email" required="" aria-required="true" class="validate">
                        <label asp-for="Email"></label>

                        <span asp-validation-for="Email" class="helper-text" style="color: #F44336"></span>

                    </div>

                    <div class="center-align" style="margin-top: 10px">
                        <button class="btn waves-effect waves-light" type="submit">
                            Reset password
                        </button>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@section Notification
{
    @{await Html.RenderPartialAsync("_NotificationMenuValidationAndMessage", new NotificationMenuViewModel { NotificationContainerId = "notificationContainer" });}
}
@model DataAnalysisSystem.DTO.DatasetDTO.AddNewDatasetViewModel

@{
    ViewData["Title"] = "Add new dataset";
}

<div class="row" style="margin-bottom:0px">

    <div class="col s8 offset-s2" style="margin-top: 5vh">
        <div class="card">
            <div class="card-content">
                <span class="card-title center-align">Add new Dataset</span>

                <form method="post">
                    <div class="input-field" style="width:70%; margin:auto;">

                        <i class="material-icons prefix">input</i>
                        <input type="text" asp-for="DatasetName" required="" aria-required="true" class="validate">
                        <label asp-for="DatasetName"></label>

                        <span asp-validation-for="DatasetName" class="helper-text" style="color: #F44336"></span>

                    </div>

                    <div class="file-field">

                        <div class="btn teal darken-4 tooltipped" data-position="left" data-tooltip="Supported formats: .csv, .json, .xml, .xls, .xlsx">
                            <span>Dataset</span>
                            <input type="file">
                        </div>
                        <div class="file-path-wrapper">
                            <input asp-for="DatasetFile" class="file-path validate" type="text" placeholder="Upload dataset" accept=".txt,.csv,.xml,.json,.xls,.xlsx">
                        </div>

                        <span asp-validation-for="DatasetFile" class="helper-text" style="color: #F44336"></span>
                    </div>

                    <div class="center-align" style="margin-top: 10px">
                        <input class="btn modal-trigger" href="#modalWaiter" type="submit" value="Load">
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@if (Model.DatasetContent.Count != 0)
{
    <div class="row">
        <div class="col s12">

            <div class="card" style="display:block; margin-bottom: 5vh">
                <div class="card-content">
                    <span class="card-title center-align">Dataset</span>
                </div>

                <table id="table-custom-elements" class="row-border" cellspacing="0">
                    <thead>
                        <tr>
                            <th><label><input class="filled-in select-all" name="select_all" value="1" type="checkbox" /><span></span></label></th>
                            <th>Name</th>
                            <th>Position</th>
                            <th>Office</th>
                            <th>Age</th>
                            <th>Start date</th>
                            <th>Salary</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="odd"><td class="dataTables-checkbox-column"><label><input class="filled-in" type="checkbox" name="id[]" value="1"><span></span></label></td><td></td><td></td><td><span class="new badge" data-badge-caption=""></span></td><td></td><td></td><td></td></tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
}

<div id="modalWaiter" class="modal bottom-sheet" style="z-index: 1010; border:solid 2px; border-color:#26a69a">
    <div class="modal-content">
        <h4 class="center-align">Loading a dataset.</h4>
        <h4 class="center-align">This may take a while.</h4>
        <div class="progress">
            <div class="indeterminate"></div>
        </div>
    </div>
</div>


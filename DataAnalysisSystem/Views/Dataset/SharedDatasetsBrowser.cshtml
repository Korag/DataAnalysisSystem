@model DataAnalysisSystem.DTO.DatasetDTO.SharedDatasetsBrowserViewModel

@{
    ViewData["Title"] = "Datasets Browser";
}

<div class="row" style="margin-top: 5vh; margin-bottom: 2vh">

    <div class="col s12 m10 l8 offset-m1 offset-l2">
        <div class="card">
            <div class="card-content">
                <span class="card-title center-align">Datasets Browser</span>

                <div class="center-align" style="margin-top: 10px">

                    <form id="AddNewDatasetSharedToForm" method="post" asp-action="SharedDatasetsBrowser" asp-controller="Dataset">

                        <div class="input-field" style="width:70%; margin:auto;">

                            <i class="material-icons prefix">vpn_key</i>
                            <input type="text" asp-for="NewSharedDatasetAccessKey" required="" aria-required="true" class="validate">
                            <label asp-for="NewSharedDatasetAccessKey"></label>

                        </div>

                        <div class="center-align" style="margin-top: 10px">
                            <button class="btn waves-effect waves-light" type="submit">
                                Add
                            </button>
                        </div>

                    </form>

                </div>

            </div>
        </div>
    </div>

</div>

<div class="row" style="margin-bottom: 5vh">
    <div class="col s12">
        <div class="card" style="display:block;">
            <div class="card-content">
                <span class="card-title center">Datasets shared to me</span>

                @{await Html.RenderPartialAsync("_LoadingIndicatorPartial", "dataTableLoadingIndicator");}

                <table id="datasetsInfoList" class="row-border highlight striped" cellspacing="0" width="100%" style="display:none">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.SharedDatasets.FirstOrDefault().DatasetName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SharedDatasets.FirstOrDefault().NumberOfColumns)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SharedDatasets.FirstOrDefault().NumberOfRows)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SharedDatasets.FirstOrDefault().InputFileName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SharedDatasets.FirstOrDefault().InputFileFormat)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SharedDatasets.FirstOrDefault().DateOfEdition)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SharedDatasets.FirstOrDefault().OwnerName)
                            </th>
                            <th>
                                Details
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int t = 0;}
                        @foreach (var dataset in Model.SharedDatasets)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => dataset.DatasetName)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => dataset.NumberOfColumns)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => dataset.NumberOfRows)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => dataset.InputFileName)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => dataset.InputFileFormat)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => dataset.DateOfEdition)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => dataset.OwnerName)
                                </td>
                                <td style="text-align:center">
                                    <a asp-action="SharedDatasetDetails" asp-controller="Dataset" asp-route-datasetIdentificator="@dataset.DatasetIdentificator" class="waves-effect waves-light btn teal lighten-1 white-text" style="margin:auto">Details</a>
                                    @{string modalDataTarget = "modalDeleteSharedDatasetByCollab" + t;}
                                    <a class="waves-effect waves-light modal-trigger" data-target="@modalDataTarget"><i class="material-icons" style="color:#b71c1c; font-size:16px; padding-bottom:20px">clear</i></a>
                                    @{t++;}
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@for (int z = 0; z < Model.SharedDatasets.Count; z++)
{
    string modalDataTarget = "modalDeleteSharedDatasetByCollab" + z;
    @await Component.InvokeAsync("ModalPopupWindow", new ModalPopupViewModel
    {
        ModalIdentificator = modalDataTarget,
        ModalTitle = "Stop observing the shared data set",
        ModalContent = "Are you sure you want to stop observing the shared data set?",

        ControllerName = "Dataset",
        ActionName = "DeleteSharedDatasetByCollab",
        RouteAdditionalArguments = new Dictionary<string, string>
                                                    {
                                                        { "datasetIdentificator", Model.SharedDatasets[z].DatasetIdentificator }
                                                    },
        ModalActAsForm = false,
        LabelOnButton = "Stop observing"
    });
}

@section Scripts{

    @{await Html.RenderPartialAsync("_DataTableWLoadingIndicatorInitScript", new DataTableInitScriptWithLoadingIndicatorViewModel { DataTableId = "datasetsInfoList", LoadingIndicatorId = "dataTableLoadingIndicator" });}

    <script>
        $(document).ready(function () {
            $('.collapsible').collapsible();
        });
    </script>

    <script>
    @for (int f = 0; f < Model.SharedDatasets.Count; f++)
        {
            <text>
                 @{string id = "#modalDeleteSharedDatasetByCollab" + f;}
                 $("@id").modal();
            </text>
        }
    </script>
}

@section Notification
{
    @{await Html.RenderPartialAsync("_NotificationMenuValidationAndMessage", new NotificationMenuViewModel { NotificationContainerId = "notificationContainer" });}
}

@model DataAnalysisSystem.DTO.DatasetDTO.ShareDatasetActionViewModel
@using DataAnalysisSystem.DTO.AdditionalFunctionalities

@{
    ViewData["Title"] = "Shared Datasets";
}

<div id="notSharedDatasets" class="col s12">
    <div class="card" style="display:block; margin-bottom: 5vh; margin-top: 10vh">
        <div class="card-content">
            <span class="card-title center">My not shared datasets</span>

            <table id="table-custom-elements" class="row-border" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.NotSharedDatasets.FirstOrDefault().DatasetName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NotSharedDatasets.FirstOrDefault().NumberOfColumns)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NotSharedDatasets.FirstOrDefault().NumberOfRows)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NotSharedDatasets.FirstOrDefault().InputFileName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NotSharedDatasets.FirstOrDefault().InputFileFormat)
                        </th>
                        <th>
                            SHARE
                        </th>
                        <th>
                            Details
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{int i = 0;}
                    @foreach (var dataset in Model.NotSharedDatasets)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(model => dataset.DatasetName)
                            </td>
                            <td>
                                @Html.DisplayFor(model => dataset.NumberOfColumns)
                            </td>
                            <td>
                                @Html.DisplayFor(model => dataset.NumberOfRows)
                            </td>
                            <td>
                                @Html.DisplayFor(model => dataset.InputFileName)
                            </td>
                            <td>
                                @Html.DisplayFor(model => dataset.InputFileFormat)
                            </td>
                            <td>
                                @{string modalDataTarget = "modalShareDataset" + i;}
                                <a class="waves-effect waves-light btn teal lighten-1 white-text modal-trigger" data-target="@modalDataTarget">Share</a>
                                @{i++;}
                            </td>
                            <td>
                                <a asp-action="DatasetDetails" asp-controller="Dataset" asp-route-datasetIdentificator="@dataset.DatasetIdentificator" class="waves-effect waves-light btn teal lighten-1 white-text">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div id="sharedDatasets" class="col s12">
    <div class="card" style="display:block; margin-bottom: 5vh; margin-top: 10vh">
        <div class="card-content">
            <span class="card-title center">My shared datasets</span>

            <table id="table-custom-elements2" class="row-border" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.SharedDatasets.FirstOrDefault().DatasetName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SharedDatasets.FirstOrDefault().NumberOfColumns)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SharedDatasets.FirstOrDefault().NumberOfRows)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SharedDatasets.FirstOrDefault().InputFileName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SharedDatasets.FirstOrDefault().InputFileFormat)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SharedDatasets.FirstOrDefault().DateOfEdition)
                        </th>
                        <th>
                            SHARE FURTHER
                        </th>
                        <th>
                            Details
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var dataset in Model.SharedDatasets)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(model => dataset.DatasetName)
                            </td>
                            <td>
                                @Html.DisplayFor(model => dataset.NumberOfColumns)
                            </td>
                            <td>
                                @Html.DisplayFor(model => dataset.NumberOfRows)
                            </td>
                            <td>
                                @Html.DisplayFor(model => dataset.InputFileName)
                            </td>
                            <td>
                                @Html.DisplayFor(model => dataset.InputFileFormat)
                            </td>
                            <td>
                                @Html.DisplayFor(model => dataset.DateOfEdition)
                            </td>
                            <td>
                                Missing modal with email input, AccessKey and generated QR Code
                            </td>
                            <td>
                                <a asp-action="DatasetDetails" asp-controller="Dataset" asp-route-datasetIdentificator="@dataset.DatasetIdentificator" class="waves-effect waves-light btn teal lighten-1 white-text">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@for (int z = 0; z < Model.NotSharedDatasets.Count; z++)
{
    string modalDataTarget = "modalShareDataset" + z;
    @await Component.InvokeAsync("ModalPopupWindow", new ModalPopupViewModel
    {
        ModalIdentificator = modalDataTarget,
        ModalTitle = "Share Dataset",
        ModalContent = "Are you sure you want to make this dataset available to other users of the system?",

        ControllerName = "Dataset",
        ActionName = "ShareDataset",
        RouteAdditionalArguments = new Dictionary<string, string>
                                                    {
                                                        { "datasetIdentificator", Model.NotSharedDatasets[z].DatasetIdentificator }
                                                    },
        ModalActAsForm = false,
        LabelOnButton = "Share"
    });
};

@section NavContent {

    <div class="nav-content">
        <ul class="tabs">
            <li class="tab">
                <a href="#sharedDatasets" class="active">Shared datasets</a>
            </li>
            <li class="tab">
                <a href="#notSharedDatasets">Not shared datasets</a>
            </li>
        </ul>
    </div>
}

@section Scripts{

    <script>

        $(document).ready(function () {
            $('.collapsible').collapsible();
        });

        $(document).ready(function () {
            $("#table-custom-elements").DataTable({ processing: true, language: { search: "", searchPlaceholder: "Enter search term" }, order: [0, "asc"], dom: 'ft<"footer-wrapper"l<"paging-info"ip>>', /*columnDefs: [{ "className": "dt-center", "targets": "_all" }],*/ scrollX: true, scrollCollapse: !0, pagingType: "full_numbers", drawCallback: function (t) { var e = this.api(); $(e.table().container()).find(".paginate_button").addClass("waves-effect"), e.table().columns.adjust() } });
            jQuery("select").not(".disabled").formSelect();

        });

        $(document).ready(function () {
            $("#table-custom-elements2").DataTable({ processing: true, language: { search: "", searchPlaceholder: "Enter search term" }, order: [0, "asc"], dom: 'ft<"footer-wrapper"l<"paging-info"ip>>', /*columnDefs: [{ "className": "dt-center", "targets": "_all" }],*/ scrollX: true, scrollCollapse: !0, pagingType: "full_numbers", drawCallback: function (t) { var e = this.api(); $(e.table().container()).find(".paginate_button").addClass("waves-effect"), e.table().columns.adjust() } });
            jQuery("select").not(".disabled").formSelect();

        });

        @for (int j = 0; j < Model.NotSharedDatasets.Count; j++)
        {
            <text>
                 @{string id = "#modalShareDataset" + j;}
                 $("@id").modal();
            </text>
        }
    </script>

    <script>
        $(document).ready(function () {
            $('.tabs').tabs()
        });
    </script>

    <script>
        $("#navbar-top").addClass("nav-extended");
    </script>
}

@section Notification
{
    <div class="row">
        <div class="col s8 offset-s2">

            @if (ViewData["Message"] != null)
            {

                <h2 class="alert alert-info" role="alert">@ViewData["Message"]</h2>
            }

        </div>
    </div>
}

@model DataAnalysisSystem.DTO.AnalysisDTO.PerformNewAnalysisViewModel

<div class="row" style="margin-top: 2vh; margin-bottom: 2vh;">
    <div class="col s12">
        <div class="card" style="display:block;">
            <div class="card-content">
                <span class="card-title center-align">Add K-Means Clustering Method Parameters</span>
                <span class="card-title center teal-text text-lighten-1"></span>

                <div class="input-field left-align col s3" style="margin-top: 10px; margin-bottom: 10px">
                    <input type="number" asp-for="AnalysisParameters.KMeansClusteringParameters.ClustersNumber" required="" aria-required="true" class="validate">
                    <label asp-for="AnalysisParameters.KMeansClusteringParameters.ClustersNumber"></label>
                    <span asp-validation-for="AnalysisParameters.KMeansClusteringParameters.ClustersNumber" class="helper-text" style="color: #F44336"></span>
                </div>

                @{await Html.RenderPartialAsync("_LoadingIndicatorPartial", "addKMeansClusteringDataTableLoadingIndicator");}

                <table id="addKMeansClusteringParametersDataTable" class="row-border highlight striped" cellspacing="0" width="100%" style="display:none">
                    <thead>

                        <tr>
                            @for (int i = 0; i < Model.AnalysisParameters.KMeansClusteringParameters.NumberColumns.Count() + Model.AnalysisParameters.KMeansClusteringParameters.StringColumns.Count(); i++)
                            {
                                var numberColumn = Model.AnalysisParameters.KMeansClusteringParameters.NumberColumns.Where(z => z.PositionInDataset == i).FirstOrDefault();

                                if (numberColumn != null)
                                {
                                    int index = Model.AnalysisParameters.KMeansClusteringParameters.NumberColumns.IndexOf(numberColumn);

                                    <th>
                                        @numberColumn.AttributeName

                                        <input asp-for="@Model.AnalysisParameters.KMeansClusteringParameters.NumberColumns[index].AttributeName" value="@Model.AnalysisParameters.KMeansClusteringParameters.NumberColumns[index].AttributeName" readonly hidden />
                                        <input asp-for="@Model.AnalysisParameters.KMeansClusteringParameters.NumberColumns[index].PositionInDataset" value="@Model.AnalysisParameters.KMeansClusteringParameters.NumberColumns[index].PositionInDataset" readonly hidden />

                                        <p class="center" onclick="StopEventPropagation(event)">
                                            <label>
                                                <input asp-for="@Model.AnalysisParameters.KMeansClusteringParameters.NumberColumns[index].ColumnSelected" type="checkbox" class="filled-in kMeansCheckBox" />
                                                <span></span>
                                            </label>
                                        </p>
                                    </th>
                                }
                                else
                                {
                                    var stringColumn = Model.AnalysisParameters.KMeansClusteringParameters.StringColumns.Where(z => z.PositionInDataset == i).FirstOrDefault();
                                    int index = Model.AnalysisParameters.KMeansClusteringParameters.StringColumns.IndexOf(stringColumn);

                                    <th>
                                        @stringColumn.AttributeName

                                        <input asp-for="@Model.AnalysisParameters.KMeansClusteringParameters.StringColumns[index].AttributeName" value="@Model.AnalysisParameters.KMeansClusteringParameters.StringColumns[index].AttributeName" readonly hidden />
                                        <input asp-for="@Model.AnalysisParameters.KMeansClusteringParameters.StringColumns[index].PositionInDataset" value="@Model.AnalysisParameters.KMeansClusteringParameters.StringColumns[index].PositionInDataset" readonly hidden />

                                        <p class="center" onclick="StopEventPropagation(event)">
                                            <label>
                                                <input asp-for="@Model.AnalysisParameters.KMeansClusteringParameters.StringColumns[index].ColumnSelected" type="checkbox" class="filled-in kMeansCheckBox" readonly disabled />
                                                <span></span>
                                            </label>
                                        </p>
                                    </th>
                                }
                            }
                        </tr>

                    </thead>
                    <tbody>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
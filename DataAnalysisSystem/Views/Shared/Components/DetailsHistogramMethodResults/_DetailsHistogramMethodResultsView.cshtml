@model DataAnalysisSystem.DTO.AnalysisDTO.AnalysisDetailsViewModel

<div class="row" style="margin-top: 2vh; margin-bottom: 2vh">
    <div class="col s12">

        <div class="card" style="display:block;">
            <div class="card-content">
                <span class="card-title center">Histogram Method Results</span>

                @for (int i = 0; i < Model.AnalysisResults.HistogramResult.AttributeName.Count; i++)
                {
                    int pixelSize = Model.AnalysisResults.HistogramResult.LabelsCount[i] * 40;
                    string widthPx = pixelSize.ToString() + "px";
                    <div style="width: 100%; overflow-x: auto; overflow-y: hidden; margin-bottom: 40px">
                        <div style="min-width: 1000px; width: @widthPx; height: 700px; margin: auto">
                            <canvas id="histogramChart_@i" width="0"></canvas>
                        </div>
                    </div>
                }

            </div>

        </div>
    </div>
</div>
@model DataAnalysisSystem.DTO.AnalysisDTO.AnalysisDetailsViewModel

<div class="row" style="margin-top: 2vh; margin-bottom: 2vh;">
    <div class="col s12">
        <div class="card" style="display:block;">
            <div class="card-content">
                <span class="card-title center-align">Approximation Method Parameters Details</span>
                <span class="card-title center teal-text text-lighten-1"></span>

                <div class="input-field left-align col s3" style="margin-top: 10px; margin-bottom: 10px">
                    <input type="number" asp-for="AnalysisParameters.ApproximationParameters.ApproximationPointsNumber" readonly>
                    <label asp-for="AnalysisParameters.ApproximationParameters.ApproximationPointsNumber"></label>
                </div>

                @{await Html.RenderPartialAsync("_LoadingIndicatorPartial", "approximationParametersDetailsDataTableLoadingIndicator");}

                <table id="approximationParametersDetailsDataTable" class="row-border highlight striped" cellspacing="0" width="100%" style="display:none">
                    <thead>

                        <tr>
                            @for (int i = 0; i < Model.AnalysisParameters.ApproximationParameters.NumberColumns.Count() + Model.AnalysisParameters.ApproximationParameters.StringColumns.Count(); i++)
                            {
                                var numberColumn = Model.AnalysisParameters.ApproximationParameters.NumberColumns.Where(z => z.PositionInDataset == i).FirstOrDefault();

                                if (numberColumn != null)
                                {
                                    int index = Model.AnalysisParameters.ApproximationParameters.NumberColumns.IndexOf(numberColumn);

                                    <th>
                                        @numberColumn.AttributeName

                                        <p class="center">
                                            <label>
                                                <input @{if (Model.AnalysisParameters.ApproximationParameters.NumberColumns[index].ColumnSelected) { <text> checked</text>}} type="checkbox" class="filled-in approxCheck" readonly disabled />
                                                <span></span>
                                            </label>
                                        </p>
                                    </th>
                                }
                                else
                                {
                                    var stringColumn = Model.AnalysisParameters.ApproximationParameters.StringColumns.Where(z => z.PositionInDataset == i).FirstOrDefault();
                                    int index = Model.AnalysisParameters.ApproximationParameters.StringColumns.IndexOf(stringColumn);

                                    <th>
                                        @stringColumn.AttributeName

                                        <p class="center">
                                            <label>
                                                <input @{if (Model.AnalysisParameters.ApproximationParameters.StringColumns[index].ColumnSelected) { <text> checked</text>}} type="checkbox" class="filled-in" readonly disabled />
                                                <span></span>
                                            </label>
                                        </p>
                                    </th>
                                }
                            }
                        </tr>

                    </thead>
                    <tbody>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
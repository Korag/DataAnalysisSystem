@model DataAnalysisSystem.DTO.AnalysisDTO.PerformNewAnalysisViewModel

<div class="row" style="margin-top: 2vh; margin-bottom: 2vh;">
    <div class="col s12">
        <div class="card" style="display:block;">
            <div class="card-content">
                <span class="card-title center-align">Add Basic Statistics Method Parameters</span>
                <span class="card-title center teal-text text-lighten-1"></span>

                <div class="right-align" style="margin-top: 10px; margin-bottom: 10px">
                    <a class="btn waves-effect waves-light" onclick="SelectAll('basicStatCheck')">
                        Select All
                    </a>
                    <a class="btn waves-effect waves-light grey" onclick="DeselectAll('basicStatCheck')">
                        Deselect All
                    </a>
                </div>

                @{await Html.RenderPartialAsync("_LoadingIndicatorPartial", "addBasicStatisticsDataTableLoadingIndicator");}

                <table id="addBasicStatisticsParametersDataTable" class="row-border highlight striped" cellspacing="0" width="100%" style="display:none">
                    <thead>

                        <tr>
                            @for (int i = 0; i < Model.AnalysisParameters.BasicStatisticsParameters.NumberColumns.Count() + Model.AnalysisParameters.BasicStatisticsParameters.StringColumns.Count(); i++)
                            {
                                var numberColumn = Model.AnalysisParameters.BasicStatisticsParameters.NumberColumns.Where(z => z.PositionInDataset == i).FirstOrDefault();

                                if (numberColumn != null)
                                {
                                    int index = Model.AnalysisParameters.BasicStatisticsParameters.NumberColumns.IndexOf(numberColumn);

                                    <th>
                                        @numberColumn.AttributeName

                                        <input asp-for="@Model.AnalysisParameters.BasicStatisticsParameters.NumberColumns[index].AttributeName" value="@Model.AnalysisParameters.BasicStatisticsParameters.NumberColumns[index].AttributeName" readonly hidden />
                                        <input asp-for="@Model.AnalysisParameters.BasicStatisticsParameters.NumberColumns[index].PositionInDataset" value="@Model.AnalysisParameters.BasicStatisticsParameters.NumberColumns[index].PositionInDataset" readonly hidden />

                                        <p class="center" onclick="StopEventPropagation(event)">
                                            <label>
                                                <input asp-for="@Model.AnalysisParameters.BasicStatisticsParameters.NumberColumns[index].ColumnSelected" type="checkbox" class="filled-in basicStatCheck" />
                                                <span></span>
                                            </label>
                                        </p>
                                    </th>
                                }
                                else
                                {
                                    var stringColumn = Model.AnalysisParameters.BasicStatisticsParameters.StringColumns.Where(z => z.PositionInDataset == i).FirstOrDefault();
                                    int index = Model.AnalysisParameters.BasicStatisticsParameters.StringColumns.IndexOf(stringColumn);

                                    <th>
                                        @stringColumn.AttributeName

                                        <input asp-for="@Model.AnalysisParameters.BasicStatisticsParameters.StringColumns[index].AttributeName" value="@Model.AnalysisParameters.BasicStatisticsParameters.StringColumns[index].AttributeName" readonly hidden />
                                        <input asp-for="@Model.AnalysisParameters.BasicStatisticsParameters.StringColumns[index].PositionInDataset" value="@Model.AnalysisParameters.BasicStatisticsParameters.StringColumns[index].PositionInDataset" readonly hidden />

                                        <p class="center" onclick="StopEventPropagation(event)">
                                            <label>
                                                <input asp-for="@Model.AnalysisParameters.BasicStatisticsParameters.StringColumns[index].ColumnSelected" type="checkbox" class="filled-in" readonly disabled />
                                                <span></span>
                                            </label>
                                        </p>
                                    </th>
                                }
                            }
                        </tr>

                    </thead>
                    <tbody>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

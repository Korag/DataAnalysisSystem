@model DataAnalysisSystem.DTO.Charts.ChartUniversalViewModel

<script>
    const config = {
        type: 'bar',
        data: {
                labels: ['Percentage'],
                datasets: [{
                    label: 'Missing values percentage',
                    data: @Html.Raw(Model.Data),
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                    ],
                    borderWidth: 1
                }]
            },
        options: {
            indexAxis: 'y',
            elements: {
                bar: {
                    borderWidth: 2,
                }
            },
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                }
            },
            scales: {
                xAxes: [{
                    display: true,
                    stacked: true,
                    ticks: {
                        min: 0,
                        max: 100
                    }
                }]
            }
        }
    };

    var myPercentageOfMissingValuesChart = new Chart(
        document.getElementById('@Model.ChartCanvasId'),
        config
    );
</script>
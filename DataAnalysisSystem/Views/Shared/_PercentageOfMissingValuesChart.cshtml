@model DataAnalysisSystem.DTO.Charts.ChartUniversalViewModel

<script>
    var ctx = document.getElementById('@Model.ChartCanvasId').getContext('2d');

    var myBarChart = new Chart(ctx, {
            type: 'horizontalBar',
            data: {
                labels: ['Missing values percentage'],
                datasets: [{
                    label: 'Percentage',
                    data: @Html.Raw(Model.Data),
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    xAxes: [{
                        display: true,
                        stacked: true,
                        ticks: {
                            min: 0,
                            max: 100
                        }
                    }]
                }
            }
        });
</script>